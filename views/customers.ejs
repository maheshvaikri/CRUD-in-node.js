<%- include layouts/header.ejs %>
<div>
  <p></p>
</div>
<div class="col-md">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4> Customers Information
                            <button type="button" class="btn btn-primary pull-right"onClick="addUser();">+Add</button>
                        </h4>
                    </div>
                    <div class="panel-body">

                        <table class="table table-striped">
                          <thead>
                          <tr>
                              <th width="50px">No</th>
                              <th>Name</th>
                              <th>Address</th>
                              <th>Phone</th>
                              <th>Email</th>
                              <th width="120px">Action</th>

                          </tr>
                          </thead>
                          <tbody>
                          <% if(data.length){

                           for(var i = 0;i < data.length;i++) { %>

                          <tr>
                              <td><%=(i+1)%></td>

                              <td><%=data[i].name%></td>
                              <td><%=data[i].address%></td>
                              <td><%=data[i].phone%></td>
                              <td><%=data[i].email%></td>

                              <td>
                                  <a class="a-inside edit" href="../customers/edit/<%=data[i].id%>">Edit</a>

                                  <a class="a-inside delete" href="../customers/delete/<%=data[i].id%>">Delete</a>
                              </td>

                          </tr>
                      <% }

                       }else{ %>
                           <tr>
                              <td colspan="3">No user</td>
                           </tr>
                      <% } %>

                          </tbody>
                        </table>

                    </div>
                </div>
            </div>

<%- include layouts/footer.ejs %>
